<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.mygld.zhihuiwen_admin.mapper.CategoryMapper">

    <!-- 新增分类 -->
    <insert id="addCategory" parameterType="top.mygld.zhihuiwen_admin.pojo.Category">
        INSERT INTO category(user_id, catalog, name, description, created_at, updated_at)
        VALUES (#{userId}, #{catalog}, #{name}, #{description}, #{createdAt}, #{updatedAt})
    </insert>

    <!-- 更新分类 -->
    <update id="updateCategory" parameterType="top.mygld.zhihuiwen_admin.pojo.Category">
        UPDATE category
        SET name = #{name},
            catalog = #{catalog},
            description = #{description},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <!-- 删除分类 -->
    <delete id="deleteCategory" parameterType="top.mygld.zhihuiwen_admin.pojo.Category">
        DELETE FROM category
        WHERE id = #{id}
    </delete>

    <!-- 根据ID查询分类 -->
    <select id="selectCategoryById" parameterType="long" resultType="top.mygld.zhihuiwen_admin.pojo.Category">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询所有分类（由 Service 层配合 PageHelper 分页） -->
    <select id="selectCategories" parameterType="long" resultType="top.mygld.zhihuiwen_admin.pojo.Category">
        SELECT * FROM category
        ORDER BY updated_at DESC
    </select>

    <select id="selectCategoriesByUserId" parameterType="long" resultType="top.mygld.zhihuiwen_admin.pojo.Category">
        SELECT * FROM category
        WHERE user_id = #{userId}
        ORDER BY updated_at DESC
    </select>

    <!-- 根据用户ID模糊搜索分类（按名称） -->
    <select id="selectCategoriesByNameLike" parameterType="map" resultType="top.mygld.zhihuiwen_admin.pojo.Category">
        SELECT * FROM category
        WHERE name LIKE CONCAT('%', #{content}, '%')
        ORDER BY updated_at DESC
    </select>

</mapper>
