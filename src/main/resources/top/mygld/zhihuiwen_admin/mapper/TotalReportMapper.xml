<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.mygld.zhihuiwen_admin.mapper.TotalReportMapper">

    <!-- 新增总报告 -->
    <insert id="insertTotalReport" parameterType="top.mygld.zhihuiwen_admin.pojo.TotalReport" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO total_report(user_id, content, created_at)
        VALUES (#{userId}, #{content}, NOW())
    </insert>

    <!-- 更新总报告 -->
    <update id="updateTotalReport" parameterType="top.mygld.zhihuiwen_admin.pojo.TotalReport">
        UPDATE total_report
        SET content = #{content}, created_at = NOW()
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <!-- 删除指定用户的总报告 -->
    <delete id="deleteTotalReportByUserId" parameterType="long">
        DELETE FROM total_report WHERE user_id = #{userId}
    </delete>

    <!-- 根据用户ID查询单条总报告（原有方法） -->
    <select id="selectTotalReportByUserId" parameterType="long" resultType="top.mygld.zhihuiwen_admin.pojo.TotalReport">
        SELECT * FROM total_report WHERE user_id = #{userId}
    </select>


    <!-- 根据关键词模糊搜索总报告内容（限定用户） -->
    <select id="searchTotalReportsByContent" parameterType="map" resultType="top.mygld.zhihuiwen_admin.pojo.TotalReport">
        SELECT * FROM total_report
        WHERE content LIKE CONCAT('%', #{keyword}, '%')
        ORDER BY created_at DESC
    </select>
    <select id="selectTotalReports" resultType="top.mygld.zhihuiwen_admin.pojo.TotalReport">
        select * from total_report
    </select>

</mapper>
