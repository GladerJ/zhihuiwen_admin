<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.mygld.zhihuiwen_admin.mapper.AdminMapper">

    <insert id="insertAdmin">
        INSERT INTO admin(name, password, create_time) VALUES(#{name}, #{password}, NOW())
    </insert>
    <update id="updateAdmin">
        UPDATE admin
        <set>
            name = #{name},
            create_time = NOW(),
            <if test="password != null">
                password = #{password},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <delete id="deleteAdmin">
        DELETE FROM admin WHERE id = #{id}
    </delete>
    <select id="selectById" resultType="top.mygld.zhihuiwen_admin.pojo.Admin">
        SELECT * FROM admin WHERE id = #{id}
    </select>
    <select id="selectAll" resultType="top.mygld.zhihuiwen_admin.pojo.Admin">
        SELECT * FROM admin
    </select>
    <select id="login" resultType="top.mygld.zhihuiwen_admin.pojo.Admin">
        SELECT * FROM admin WHERE name = #{name} AND password = #{password}
    </select>
    <select id="selectAdminByName" resultType="top.mygld.zhihuiwen_admin.pojo.Admin">
        select * from admin where name = #{param1}
    </select>
    <!-- 根据管理员名称模糊搜索 -->
    <select id="selectAdminsByNameLike" resultType="top.mygld.zhihuiwen_admin.pojo.Admin">
        SELECT * FROM admin
        <where>
            <if test="name != null and name != ''">
                name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

</mapper>